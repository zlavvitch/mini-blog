{
  "compilerOptions": {
    "tsBuildInfoFile": "./.tsbuildinfo/node.tsbuildinfo",
    "incremental": true,
    "target": "ES2022",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
